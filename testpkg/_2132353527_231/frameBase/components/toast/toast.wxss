.mask {
    z-index: 99998;
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
}

.container {
    z-index: 99999;
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    width: 100%;
    transition: all 0.3s;
    animation: fadeIn 0.3s;
}

.title {
    max-width: 80%;
    padding: 15px 24px;
    border-radius: 5px;
    text-align: center;
    word-break: break-all;
    color: #fff;
    background-color: rgba(0,0,0,0.8);
}
.tool-tip {
    position: fixed;
    display: flex;
    max-width: 215px;
    word-break: break-all;
    z-index: 100002;
}

.tool-tip-text {
    position: relative;
    background: #ffe22a;
    font-size: 15px;
    text-shadow: none;
    line-height: 1.6;
    color: #333333;
    text-align: left;
    padding: 5px 7px 5px 7.5px;
    font-weight: bold;
    z-index: 10000;
    max-width: 215px;
    box-sizing: border-box;
    border: 2px solid #000000;
    box-shadow: 0 4px 9px 1px rgba(0,0,0,0.20);
    border-radius: 8px;
}

.left {
    transform: translateX(-50%);
}

.left-left {
    transform: translateX(-100px);
}

.right {
    transform: translateX(50%);
}

.right-right {
    transform: translateX(100px);
}

.other-top {
    position: absolute;
    bottom: -11px;
    background: #ffe22a;
    width: 16px;
    height: 16px;
    transform: rotate(45deg);
    border-bottom: 2px solid #000000;
    border-right: 2px solid #000000;
}

.other-bottom {
    position: absolute;
    top: -11px;
    background: #ffe22a;
    width: 16px;
    height: 16px;
    transform: rotate(45deg);
    border-top: 2px solid #000000;
    border-left: 2px solid #000000;
}

.type-mid {
    left: calc(50% - 8px);
}
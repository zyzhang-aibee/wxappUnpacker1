.container {
    width: 100%;
    padding: 0px 15px;
    box-sizing: border-box;
    background-color: #FFFFFF;
}

.item-container {
    display: inline-block;
    position: relative;
    width: 171rpx;
    height: 200rpx;
    vertical-align: top;
}

.item-icon-container {
    display: flex;
    height: 100%;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.item-icon {
    position: relative;
    width: 40px;
    height: 40px;
}

.item-count {
    color: #999999;
    font-size: 1em;
    text-align: center;
    line-height: 10px;
    height: 10px;
}

.item-top-red-dot {
    position: absolute;
    width: 10px;
    height: 10px;
    background-color: #ff2064;
    border-radius: 50%;
    top: 0;
    right: -4px;
}

.item-top-count {
    position: absolute;
    background-color: #ff2064;
    color: #FFFFFF;
    font-size: 1em;
    border-radius: 10px;
    top: 0;
    right: -4px;
    padding: 3px 6px;
    text-align: center;
    line-height: 10px;
}

.item-title {
    font-size: 1.6em;
    line-height: 1.4;
    color: #333333;
    text-align: center;
}

.item-button {
    margin: 0 0;
    padding: 0 0;
    background-color: #FFFFFF;
}
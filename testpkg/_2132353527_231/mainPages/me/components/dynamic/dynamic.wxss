.container {
    padding: 15px 15px;
    border-bottom: 1px solid #F3F3F3;
    display: flex;
    flex-direction: column;
}

.temp {
    display: flex;
}

.avatar-container {
    width: 30px;
    height: 30px;
}

.avatar {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.content {
    margin-left: 15px;
    flex: 1;
}

.header {
    display: flex;
    justify-content: space-between;
}

.title {
    font-size: 1.2em;
    color: #aaaaaa;
}

.nick {
    color: #333333;
    margin-right: 7px;
}

.more-icon {
    width: 20px;
    height: 15px;
    padding: 0 10px 5px;
}

.body {
    display: flex;
    flex-direction: column;
}

.comment {
    margin-top: 8px;
    font-size: 1.5em;
    color: #333333;
    word-break: break-all;
}

.album-container {
    display: flex;
    align-items: center;
    margin-top: 15px;
    background-color: #F8F8F8;
}

.album-cover-container {
    position: relative;
    padding: 5px;
    box-sizing: border-box;
}

.album-cover {
    width: 90px;
    height: 90px;
}

.comment-album-cover {
    width: 50px;
    height: 50px;
}

.article-flag {
    position: absolute;
    right: 6px;
    top: 6px;
    z-index: 5;
    padding: 0 6px;
    font-size: 1.4em;
    border-radius: 4px;
    background-color: rgba(0,0,0,0.5);
    color: #ffffff;
}

.album-title {
    flex: 1;
    margin-left: 5px;
    padding: 5px 0;
    font-size: 1.5em;
    color: #333333;
    line-height: 1.33;
    font-weight: bold;
}

.footer {
    display: flex;
    justify-content: space-between;
    margin-top: 15px;
    color: #a1a1a1;
}

.footer-date {
    font-size: 1.2em;
    line-height: 1.33em;
}

.footer-views-favor {
    display: flex;
    justify-content: flex-end;
    font-size: 1.4em;
}

.view-container,.favor-container {
    display: flex;
    align-items: center;
}

.view-icon {
    width: 1em;
    height: 1em;
    margin-right: 5px;
}

.favor_icon {
    width: 1em;
    height: 1em;
    margin: 1px 5px 0px 16px;
    background-repeat: no-repeat;
    background-size: 2em 1em;
    background-image: url('https://static2.xiaoniangao.cn/mini_app/img/play/praise-red.png');
    background-position: 0px center;
}

.favor_icon_favored {
    background-position: -1em center;
}

.over-flow-ellipsis {
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    word-break: break-all;
}

.tow-lines {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
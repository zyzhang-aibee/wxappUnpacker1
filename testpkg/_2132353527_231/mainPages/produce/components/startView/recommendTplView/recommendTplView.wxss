.hide-scrollbar-wrap {
    height: 103px;
    overflow: hidden;
}

.recommend-tpl-con {
    padding: 15px;
}

.shadow {
    box-shadow: inset 0 15px 30px -10px #ececec;
    padding-top: 30px;
}

.recommend-tpl-head {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.recommend-start-title {
    font-weight: bold;
    color: #333;
}

.recommend-more {
    font-size: 1.4em;
    color: #666666;
    line-height: 1.43;
}

.recommend-tpl-wrap {
    width: 100%;
    height: 113px;
    padding-top: 8px;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    white-space: nowrap;
}

.recommend-tpl-wrap::-webkit-scrollbar {
    display: none;
    width: 0;
    height: 0;
    color: transparent;
}

.recommend-tpl-item {
    display: inline-block;
    margin-right: 10px;
}

.recommend-tpl-img {
    width: 70px;
    height: 70px;
    position: relative;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    border-radius: 4px;
}

.paly-icon {
    width: 16px;
    height: 16px;
    position: absolute;
    top: calc(50% - 8px);
    left: calc(50% - 8px);
}

.recommend-tpl-start-text {
    width: 70px;
    margin-top: 7px;
    line-height: 20px;
    color: #000;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    text-align: center;
    font-size: 1.4em;
}
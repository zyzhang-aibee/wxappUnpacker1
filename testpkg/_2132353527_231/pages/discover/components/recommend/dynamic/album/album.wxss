.album {
    position: relative;
    width: 690rpx;
    height: 460rpx;
    margin: 0 auto;
    border-radius: 8rpx;
    box-shadow: 0 6rpx 10rpx 0 rgba(0,0,0,0.1);
}

.bg-image {
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
}

.mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
    background: linear-gradient(to bottom,rgba(0,0,0,0),rgba(0,0,0,.5));
}

.title-container {
    position: absolute;
    top: 0;
    width: 100%;
    border-radius: 8rpx 8rpx 0 0;
}

.title-container-bg {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: 8rpx 8rpx 0 0;
    background: linear-gradient(to bottom,rgba(0,0,0,0.7),rgba(0,0,0,0.03));
}

.title {
    padding: 10rpx 10rpx 0 10rpx;
    margin-bottom: 10rpx;
    font-size: 40rpx;
    line-height: 64rpx;
    color: #FFFFFF;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-weight: 500;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
    text-shadow: 0px 2px 4px rgba(0,0,0,0.5);
    z-index: 10;
}

.play {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -65rpx;
    margin-top: -65rpx;
    width: 130rpx;
    height: 130rpx;
    z-index: 10;
}

.bottom {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 98rpx;
    font-size: 26rpx;
    line-height: 38rpx;
    color: #FFFFFF;
}

.views {
    position: absolute;
    left: 24rpx;
    bottom: 24rpx;
    z-index: 10;
}

.article-flag {
    position: absolute;
    right: 24rpx;
    bottom: 24rpx;
    z-index: 10;
    padding: 6rpx 12rpx;
    font-size: 36rpx;
    border-radius: 8rpx;
    color: #ffffff;
    background-color: rgba(0,0,0,0.5);
}

.duration {
    position: absolute;
    right: 24rpx;
    bottom: 24rpx;
    z-index: 10;
}
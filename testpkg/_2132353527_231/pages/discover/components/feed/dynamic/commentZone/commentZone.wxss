.container {
    margin-top: 8px;
    margin-bottom: 10px;
}

.body {
    background-color: #F5F6F7;
    padding: 12px 10px 0 10px;
    border-radius: 5px;
}

.comment-list {
}

.comment-item {
    margin-bottom: 4px;
    line-height: 21px;
    font-size: 15px;
    color: #686868;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
}

.comment-item:last-of-type {
    margin-bottom: 0;
}

.comment-nick {
    display: inline;
    color: #000;
}

.separator {
    margin-top: 8px;
    height: 1px;
    background-color: #E2E2E2;
    transform: scaleY(0.5);
}

.all-comment-link {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 9px 0;
    font-size: 13px;
    color: #25ACFF;
}

.fast-entry {
    display: flex;
    align-items: center;
    height: 100%;
}

.fast-entry-icon {
    width: 15px;
    height: 14px;
    margin: 2px 6px 0 0;
}
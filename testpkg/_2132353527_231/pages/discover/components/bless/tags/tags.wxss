.container {
    height: 100rpx;
}

.scroll-wrapper {
    z-index: 99;
    overflow: hidden;
    position: fixed;
    top: 0;
    width: 100%;
    height: 100rpx;
}

.scroll-view {
    height: 100rpx;
    padding: 20rpx 0 16rpx 0;
    white-space: nowrap;
    background-color: #fff;
}

.tag {
    display: inline-block;
    min-width: 120rpx;
    margin-right: 20rpx;
    padding: 12rpx 15rpx;
    border-radius: 33rpx;
    line-height: 42rpx;
    font-size: 30rpx;
    font-weight: 500rpx;
    color: #4a4a4a;
    background-color: #fff;
}

.tag:first-child {
    margin-left: 30rpx;
}

.tag:last-child {
    margin-right: 30rpx;
}

.tag.checked {
    font-weight: 700;
    color: #ff2064;
    background-color: #ffeaf0;
}
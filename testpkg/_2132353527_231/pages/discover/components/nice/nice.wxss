.scroll-view {
    animation: in .3s ease-in;
    animation-fill-mode: forwards;
}

@-webkit-keyframes in {
    0% {
        opacity: 0;
    }

    30% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes in {
    0% {
        opacity: 0;
    }

    30% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}
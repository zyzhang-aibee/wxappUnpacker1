.container {
    height: 112rpx;
}

.tab-bar {
    z-index: 100001;
    overflow: hidden;
    display: flex;
    position: fixed;
    right: 0;
    left: 0;
    height: 112rpx;
    padding: 0 10rpx;
    box-shadow: 0 6rpx 4rpx 0rpx rgba(217,217,217,0.5);
    background: #ffffff;
}

.tabs {
    height: 150rpx;
    white-space: nowrap;
}

.tab {
    display: inline-block;
    box-sizing: border-box;
    position: relative;
    height: 112rpx;
    padding: 0 20rpx;
    line-height: 112rpx;
    font-size: 36rpx;
    font-weight: 700;
    color: #4A4A4A;
    transition: font-size 0.1s;
}

.tab-selected {
    font-size: 44rpx;
    color: #FF2064;
}

.tab-selected:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 60rpx;
    height: 10rpx;
    border-radius: 100rpx;
    box-shadow: 0 4rpx 10rpx 0 rgba(255,116,159,0.6);
    background: #ff2064;
    transform: translateX(-50%);
}

.more {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 0;
    right: 0;
    width: 95rpx;
    height: 100%;
    font-size: 70rpx;
    color: #4A4A4A;
    background-color: #ffffff;
    box-shadow: -16rpx 0 24rpx -10rpx rgba(217,217,217,0.5);
}

.search-btn {
    width: 40rpx;
    height: 40rpx;
    padding: 24rpx 32rpx;
}

.search-btn-icon {
    width: 100%;
    height: 100%;
}

@-webkit-keyframes fade-in-up {
    0% {
        opacity: 0;
        transform: translate3d(-50%,100%);
    }

    100% {
        opacity: 1;
        transform: translate3d(-50%,0);
    }
}

@keyframes fade-in-up {
    0% {
        opacity: 0;
        transform: translate3d(-50%,100%);
    }

    100% {
        opacity: 1;
        transform: translate3d(-50%,0);
    }
}
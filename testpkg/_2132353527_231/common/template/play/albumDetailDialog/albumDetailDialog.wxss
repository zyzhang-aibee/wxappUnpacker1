.album-detail-dialog-con {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 11000;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(0,0,0,0.5);
    top: 0;
    left: 0;
}

.album-detail-dialog {
    position: relative;
    background: #ffffff;
    padding: 20rpx 26rpx 40rpx 30rpx;
    box-shadow: 0 8rpx 26rpx 2rpx rgba(51,51,51,0.10);
    border-radius: 24rpx;
    width: 64%;
}

.album-detail-dialog-title {
    font-size: 40rpx;
    color: #333333;
    line-height: 60rpx;
    font-weight: bold;
}

.album-detail-dialog-item {
    display: flex;
    padding-top: 30rpx;
    font-size: 28rpx;
    line-height: 40rpx;
}

.album-detail-dialog-item-name {
    color: #999999;
    min-width: 82rpx;
}

.album-detail-dialog-item-text {
    color: #333333;
}

.album-detail-dialog-exit {
    position: absolute;
    top: 0;
    right: 0;
    padding: 10rpx;
}

.exit-img {
    width: 80rpx;
    height: 80rpx;
}